{% extends 'baseTheatreViewQr.html.twig' %}

{% block title %}Modifier Theatre{% endblock %}

{% block body %}

{{parent()}}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <p class="fs-3 mt-3 text-white">Modifier le compte :</p>

    {{ form_start(editTheatreForm) }}

        <div class="form-floating mb-2">
            {{ form_widget(editTheatreForm.email, {'attr': {'class': 'form-control','placeholder': 'Email'}}) }}
            {{ form_label(editTheatreForm.email) }}
        </div>

        <div class="form-floating mb-2">
            {{ form_widget(editTheatreForm.password, {'attr': {'class': 'form-control','placeholder': 'Mot de passe'}}) }}
            {{ form_label(editTheatreForm.password) }}

        </div>
        <button type="submit" class="btn btn-dark">Valider</button>
    {{ form_end(editTheatreForm) }}

</div>
{% endblock %}
