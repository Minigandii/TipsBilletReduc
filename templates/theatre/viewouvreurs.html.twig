
<div class="row">
        {% for ouvreur in ouvreurs_list %}
        
        <div class="col-md-4 mt-3 mb-5">
            <a href="/theatre/viewouvreur/{{ ouvreur.id }}" class="card-link text-decoration-none">
                <div class="card bg-light text-dark">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{ ouvreur.nom }}</h5>
                        <p class="card-text text-center">{{ ouvreur.prenom }}</p>
                        <p class="card-text text-center"><i class="fa-solid fa-phone"></i> {{ ouvreur.telephone }}</p>
                    </div>
                </div>
            </a>
        </div>
        
        {% endfor %}
        </div>
